# FerrumDeck EditorConfig
# ========================
# https://editorconfig.org

root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Rust
[*.rs]
indent_size = 4
max_line_length = 100

# Python
[*.py]
indent_size = 4
max_line_length = 100

# TOML (Cargo.toml, pyproject.toml)
[*.toml]
indent_size = 4

# YAML
[*.{yaml,yml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Makefile (requires tabs)
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# SQL
[*.sql]
indent_size = 2

# Proto
[*.proto]
indent_size = 2
